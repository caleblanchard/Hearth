# Self-Hosted Environment Variables
# Copy this file to .env for local/self-hosted deployments

# ==========================================
# Deployment Mode
# ==========================================
NODE_ENV=production

# ==========================================
# Application Settings
# ==========================================
APP_PORT=3000
APP_URL=http://localhost:3000

# ==========================================
# Supabase Configuration (Self-Hosted)
# ==========================================
# These will be auto-generated by Supabase on first start
# or you can generate them manually

# JWT Secret (generate with: openssl rand -hex 32)
JWT_SECRET=your-super-secret-jwt-token-with-at-least-32-characters

# Supabase API Keys (generate these)
# Run: docker compose exec supabase-db psql -U postgres -c "SELECT set_config('app.jwt_secret', 'your-jwt-secret', false);"
# Then generate keys at: https://supabase.com/docs/guides/self-hosting/docker#generate-api-keys
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# ==========================================
# PostgreSQL Database
# ==========================================
POSTGRES_PORT=5432
POSTGRES_PASSWORD=your-super-secret-postgres-password

# ==========================================
# Supabase Kong (API Gateway)
# ==========================================
KONG_HTTP_PORT=8000
KONG_HTTPS_PORT=8443

# ==========================================
# Supabase Studio (Database Management UI)
# ==========================================
STUDIO_PORT=3001

# ==========================================
# Redis Configuration
# ==========================================
REDIS_PORT=6379

# ==========================================
# MinIO Object Storage
# ==========================================
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=your-secure-minio-password-min-8-chars

# ==========================================
# Email Configuration (for password resets)
# ==========================================
# If MAILER_AUTOCONFIRM=true, email confirmation is skipped
MAILER_AUTOCONFIRM=true
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@yourdomain.com

# ==========================================
# OAuth Providers (Optional)
# ==========================================
GOOGLE_OAUTH_ENABLED=false
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ==========================================
# External Services (Optional)
# ==========================================
# Weather API
WEATHER_API_KEY=your_openweathermap_api_key

# Push Notifications (generate with: npx web-push generate-vapid-keys)
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
